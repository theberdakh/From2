<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?colorSurfaceContainer"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:background="@drawable/shape_translate_card_arrow"
            android:elevation="1dp"
            android:weightSum="2"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_from"
                style="?materialIconButtonOutlinedStyle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textColor="@color/black"
                android:text="@string/uzbek"
                app:iconGravity="start"
                app:iconPadding="8dp"
                app:iconTint="@android:color/transparent"
                app:iconTintMode="add"
                app:strokeWidth="0dp" />

            <FrameLayout
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:padding="8dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/round_compare_arrows_24"
                    android:backgroundTint="?colorSecondary" />


            </FrameLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_to"
                style="?materialIconButtonOutlinedStyle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/karakalpak"
                android:textColor="@color/black"
                app:iconGravity="end"
                app:iconPadding="8dp"
                app:iconTint="@android:color/transparent"
                app:iconTintMode="add"
                app:strokeWidth="0dp" />
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:padding="8dp"
        android:elevation="1dp"
        android:background="@drawable/shape_translate_input_field"
        android:orientation="vertical">


            <EditText
                android:id="@+id/edit_text_top_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:imeOptions="actionDone"
                android:background="@android:color/transparent"
                android:gravity="top"
                android:scrollbars="vertical"
                android:hint="@string/hint_enter_your_text"
                android:inputType="textNoSuggestions|textMultiLine"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:visibility="gone"
            android:gravity="center_vertical|end"
            android:orientation="horizontal">

            <View
                android:id="@+id/view_delete"
                android:layout_width="24dp"
                android:layout_marginHorizontal="8dp"
                android:layout_height="24dp"
                android:background="@drawable/round_close_24"
                android:backgroundTint="?colorPrimaryVariant" />

        </LinearLayout>



        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            app:layout_constraintTop_toBottomOf="@id/edit_text_top_input"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />



            <EditText
                android:id="@+id/edit_text_bottom_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints=""
                android:inputType="textNoSuggestions|textMultiLine"
                android:padding="8dp"
                android:scrollbars="vertical"
                android:background="@android:color/transparent"
                android:gravity="top"
                android:hint="@string/hint_ouput_will_be_here"
                />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:padding="4dp"
            android:orientation="horizontal">

            <View
                android:id="@+id/view_copy"
                android:layout_width="24dp"
                android:layout_marginHorizontal="8dp"
                android:layout_height="24dp"
                android:layout_gravity="end"
                android:background="@drawable/round_content_copy_24"
                android:backgroundTint="?colorPrimaryVariant" />

            <View
                android:id="@+id/view_share"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="end"
                android:layout_marginHorizontal="8dp"
                android:background="@drawable/round_share_24"
                android:backgroundTint="?colorPrimaryVariant" />

        </LinearLayout>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_translate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_margin="8dp"
            android:visibility="gone"
            android:text="@string/translate"
            app:cornerRadius="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edit_text_top_input" />


    </LinearLayout>






</LinearLayout>