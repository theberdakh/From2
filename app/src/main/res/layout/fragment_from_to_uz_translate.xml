<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/shape_translate_card_arrow"
            android:elevation="3dp"
            android:layout_margin="8dp"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_from"
                style="?materialIconButtonOutlinedStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="1"
                android:text="Ã“zbekshe"
                app:icon="@drawable/uzb"
                app:iconGravity="start"
                app:iconPadding="8dp"
                app:iconTint="@android:color/transparent"
                app:iconTintMode="add"
                app:strokeWidth="0dp" />

            <FrameLayout
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="8dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/round_compare_arrows_24"
                    android:backgroundTint="?colorSecondary" />


            </FrameLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_to"
                style="?materialIconButtonOutlinedStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="1"
                android:text="Qaraqalpaqsha"
                app:icon="@drawable/kar"
                app:iconGravity="end"
                app:iconPadding="8dp"
                app:iconTint="@android:color/transparent"
                app:iconTintMode="add"
                app:strokeWidth="0dp" />
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/shape_translate_input_field"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp"
            android:paddingTop="8dp">

            <View
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="end"
                android:background="@drawable/round_close_24"
                android:backgroundTint="?colorSecondary" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minLines="4"
                android:background="@android:color/transparent"
                android:text="Hello" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp"
            android:paddingBottom="8dp">

            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="Translate"
                app:cornerRadius="16dp" />

        </FrameLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/shape_translate_input_field"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp"
            android:paddingTop="8dp">

            <View
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="end"
                android:background="@drawable/round_close_24"
                android:backgroundTint="?colorSecondary" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:paddingHorizontal="16dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minLines="4"
                android:background="@android:color/transparent"
                android:text="Hello" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:paddingBottom="8dp">

            <View
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="end"
                android:layout_margin="8dp"
                android:background="@drawable/round_content_copy_24"
                android:backgroundTint="?colorSecondary" />

            <View
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="end"
                android:layout_margin="8dp"
                android:background="@drawable/round_share_24"
                android:backgroundTint="?colorSecondary" />

            <View
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="end"
                android:layout_margin="8dp"
                android:background="@drawable/round_star_border_24"
                android:backgroundTint="?colorSecondary" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>